{
    "@context": {
        "g4a": "https://tangentvision.com/g4a/",
        "@vocab": "https://tangentvision.com/g4a/vocab#"
    },
    "@graph": [
        {
            "@type": "Workflow",
            "@id": "g4a:workfows/default-grant",
            "disposition": "grant",
            "name": "grant-default",
            "workflow": [
                {
                    "default": true,
                    "id": "draft",
                    "status": "Draft",
                    "readwrite": true,
                    "transitions": [
                        {
                            "id": "live",
                            "description": "Make the grant open for applications"
                        },
                        {
                            "id": "archived",
                            "description": "Discard this grant"
                        }
                    ]
                },
                {
                    "id": "live",
                    "status": "Live",
                    "public": true,
                    "transitions": [
                        {
                            "id": "closed",
                            "description": "Close the grant to new applications"
                        }
                    ]
                },
                {
                    "id": "closed",
                    "status": "Closed",
                    "transitions": [
                        {
                            "id": "draft",
                            "description": "Put this grant back in draft mode where it can be edited"
                        },
                        {
                            "id": "live",
                            "description": "Re-open this grant to new applications"
                        },
                        {
                            "id": "archived",
                            "description": "This will remove the grant from your list of administered grants"
                        }
                    ]
                },
                {
                    "id": "archived",
                    "status": "Archived"
                }
            ]
        },
        {
            "@type": "Workflow",
            "@id": "g4a:workflows/default-application",
            "disposition": "application",
            "name": "application-default",
            "workflow": [
                {
                    "default": true,
                    "id": "draft",
                    "status": "Draft",
                    "readwrite": true,
                    "transitions": [
                        {
                            "id": "submitted",
                            "description": "If you submit your grant it will be closed to further modifications"
                        }
                    ]
                },
                {
                    "id": "submitted",
                    "status": "Submitted",
                    "transitions": [
                        {
                            "id": "cancelled",
                            "description": "Cancel this application and remove it from consideration"
                        },
                        {
                            "id": "approved",
                            "description": "Approve this application for funding"
                        },
                        {
                            "id": "denied",
                            "description": "Decline this application for funding"
                        }
                    ]
                },
                {
                    "id": "cancelled",
                    "status": "Cancelled"
                },
                {
                    "id": "denied",
                    "status": "Declined"
                }
            ]
        }
    ]
}