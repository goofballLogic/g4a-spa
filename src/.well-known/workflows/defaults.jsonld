{
    "@context": {
        "g4a": "https://tangentvision.com/g4a/",
        "@vocab": "https://tangentvision.com/g4a/vocab#"
    },
    "@graph": [
        {
            "@type": "Workflow",
            "@id": "g4a:workflows/default-grant",
            "disposition": "grant",
            "name": "grant-default",
            "workflow": [
                {
                    "default": true,
                    "id": "draft",
                    "status": "Draft",
                    "readwrite": true,
                    "transitions": [
                        {
                            "id": "live",
                            "action": "Open",
                            "description": "Make the grant open for applications"
                        },
                        {
                            "id": "archived",
                            "action": "Archive",
                            "description": "Discard this grant"
                        }
                    ]
                },
                {
                    "id": "live",
                    "status": "Live",
                    "public": true,
                    "transitions": [
                        {
                            "id": "closed",
                            "action": "Close",
                            "description": "Close the grant to new applications"
                        }
                    ]
                },
                {
                    "id": "closed",
                    "status": "Closed",
                    "transitions": [
                        {
                            "id": "draft",
                            "action": "Back to Draft",
                            "description": "Put this grant back in draft mode where it can be edited"
                        },
                        {
                            "id": "live",
                            "action": "Re-open",
                            "description": "Re-open this grant to new applications"
                        },
                        {
                            "id": "archived",
                            "action": "Archive",
                            "description": "WARNING: This will remove the grant from your list of administered grants"
                        }
                    ]
                },
                {
                    "id": "archived",
                    "status": "Archived"
                }
            ]
        },
        {
            "@type": "Workflow",
            "@id": "g4a:workflows/default-application",
            "disposition": "application",
            "name": "application-default",
            "workflow": [
                {
                    "default": true,
                    "id": "draft",
                    "status": "Draft",
                    "readwrite": true,
                    "transitions": [
                        {
                            "id": "submitted",
                            "action": "Submit",
                            "description": "Submit this application (you won't be able to modify once it is submitted)"
                        }
                    ]
                },
                {
                    "id": "submitted",
                    "status": "Submitted",
                    "transitions": [
                        {
                            "id": "cancelled",
                            "action": "Cancel",
                            "description": "Cancel this application and remove it from consideration"
                        },
                        {
                            "id": "approved",
                            "action": "Approve",
                            "description": "Approve this application for funding"
                        },
                        {
                            "id": "denied",
                            "action": "Decline",
                            "description": "Decline this application for funding"
                        }
                    ]
                },
                {
                    "id": "cancelled",
                    "status": "Cancelled"
                },
                {
                    "id": "denied",
                    "status": "Declined"
                },
                {
                    "id": "approved",
                    "status": "Approved",
                    "transitions": [
                        {
                            "id": "rejected",
                            "action": "Decline",
                            "description": "Decline the offered grant"
                        },
                        {
                            "id": "accepted",
                            "action": "Accept",
                            "description": "Accept the offered grant"
                        }
                    ]
                },
                {
                    "id": "rejected",
                    "status": "Rejected"
                },
                {
                    "id": "accepted",
                    "status": "Accepted"
                }
            ]
        }
    ]
}